<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <inset android:insetLeft="@dimen/button_inset_horizontal" android:insetRight="@dimen/button_inset_horizontal" android:insetTop="@dimen/button_inset_vertical" android:insetBottom="@dimen/button_inset_vertical">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/btn_padding_vertical" />
                <solid android:color="@color/white" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="@dimen/button_inset_horizontal" android:insetRight="@dimen/button_inset_horizontal" android:insetTop="@dimen/button_inset_vertical" android:insetBottom="@dimen/button_inset_vertical">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/btn_padding_vertical" />
                <solid android:color="?colorButtonNormal" />
            </shape>
        </inset>
    </item>
</ripple>