        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Condensed</item>
        <item name="actionButtonStyle">@style/ActionBarCondensedButtonStyle</item>
        <item name="windowActionBar">false</item>
