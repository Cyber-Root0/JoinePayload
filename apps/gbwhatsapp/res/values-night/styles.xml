<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/paletteSurface_4dp</item>
    </style>
    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark" />
    <style name="BaseRoundedBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@color/bottom_sheet_dialog_background</item>
